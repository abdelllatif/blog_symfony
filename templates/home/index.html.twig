{% extends 'base.html.twig' %}

{% block title %}Welcome to Our Blog | Insightful Articles & Stories{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        #vanta-bg {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            z-index: 0;
        }
    </style>
{% endblock %}

{% block body %}
    <!-- Hero Section -->
    <section class="relative min-h-screen overflow-hidden bg-gradient-to-br from-gray-900 via-purple-900 to-black">
        <!-- Vanta.js Background -->
        <div id="vanta-bg"></div>
        
        <!-- Content Overlay -->
        <div class="absolute inset-0 z-0">
            <div class="absolute inset-0 bg-gradient-to-br from-black/80 via-gray-900/80 to-black/80"></div>
        </div>
        
        <div class="relative max-w-7xl mx-auto px-6 py-24 sm:py-32 lg:px-8 lg:py-40">
            <div class="text-center">
                <h1 class="text-5xl font-bold tracking-tight text-transparent bg-clip-text bg-gradient-to-r from-purple-400 via-pink-500 to-red-500 sm:text-6xl lg:text-7xl xl:text-8xl animate-gradient">
                    <span class="block">Discover & Share</span>
                    <span class="block mt-2">Powerful Stories</span>
                </h1>
                <p class="mt-6 text-xl text-gray-400 max-w-3xl mx-auto">
                    Join our community of thinkers, writers, and readers exploring the world through insightful articles.
                </p>
                <div class="mt-10 flex justify-center gap-4">
                    <a href="{{ path('app_register') }}" 
                       class="group relative px-8 py-4 text-sm font-semibold text-white">
                        <div class="absolute inset-0 bg-gradient-to-r from-purple-500 to-pink-500 rounded-lg blur opacity-75 group-hover:opacity-100 transition duration-1000 group-hover:duration-200"></div>
                        <div class="relative flex items-center">
                            <span class="mr-2">Start Reading</span>
                            <svg class="w-5 h-5 transform group-hover:translate-x-1 transition-transform duration-200" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
                            </svg>
                        </div>
                    </a>
                    <a href="#trending" 
                       class="group relative px-8 py-4 text-sm font-semibold text-white">
                        <div class="absolute inset-0 bg-gray-800 rounded-lg blur opacity-75 group-hover:opacity-100 transition duration-1000 group-hover:duration-200"></div>
                        <div class="relative flex items-center">
                            <span class="mr-2">Trending Now</span>
                            <svg class="w-5 h-5 transform group-hover:translate-x-1 transition-transform duration-200" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
                            </svg>
                        </div>
                    </a>
                </div>
            </div>
        </div>
    </section>

    <!-- Featured Posts Section -->
    <section class="py-16 bg-gradient-to-br from-black via-purple-900 to-gray-900">
        <div class="max-w-7xl mx-auto px-6 lg:px-8">
            <div class="text-center mb-12">
                <h2 class="text-3xl font-bold text-transparent bg-clip-text bg-gradient-to-r from-purple-400 via-pink-500 to-red-500 sm:text-4xl">
                    Featured Stories
                </h2>
                <p class="mt-3 max-w-2xl mx-auto text-xl text-gray-400">
                    Curated content selected by our editors
                </p>
            </div>
            
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
                <div class="col-span-full bg-gray-900 rounded-2xl p-8 text-center transform hover:scale-[1.02] transition-all duration-500">
                    <div class="flex flex-col items-center justify-center space-y-4">
                        <div class="relative w-24 h-24">
                            <div class="absolute inset-0 bg-gradient-to-r from-purple-500 to-pink-500 rounded-full animate-pulse"></div>
                            <svg class="relative w-16 h-16 text-white mx-auto mt-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z"></path>
                            </svg>
                        </div>
                        <h3 class="text-2xl font-bold text-white">No Posts Yet</h3>
                        <p class="text-gray-400 max-w-md">
                            We're working on bringing you amazing content. Check back soon for featured stories!
                        </p>
                        <a href="{{ path('app_register') }}" 
                           class="group relative px-6 py-3 text-sm font-semibold text-white">
                            <div class="absolute inset-0 bg-gradient-to-r from-purple-500 to-pink-500 rounded-lg blur opacity-75 group-hover:opacity-100 transition duration-1000 group-hover:duration-200"></div>
                            <div class="relative flex items-center">
                                <span class="mr-2">Be the First to Post</span>
                                <svg class="w-5 h-5 transform group-hover:translate-x-1 transition-transform duration-200" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
                                </svg>
                            </div>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Categories Section -->
    <section class="py-16 bg-gradient-to-br from-gray-900 via-black to-purple-900">
        <div class="max-w-7xl mx-auto px-6 lg:px-8">
            <div class="text-center mb-12">
                <h2 class="text-3xl font-bold text-transparent bg-clip-text bg-gradient-to-r from-purple-400 via-pink-500 to-red-500 sm:text-4xl">
                    Explore Topics
                </h2>
                <p class="mt-3 max-w-2xl mx-auto text-xl text-gray-400">
                    Dive into your favorite categories
                </p>
            </div>
            
            <div class="grid grid-cols-2 sm:grid-cols-3 lg:grid-cols-5 gap-6">
                {% for category in categories %}
                <a href="#" class="group relative overflow-hidden rounded-2xl h-40 bg-gray-900 transition-all duration-500 hover:scale-[1.02]">
                    <div class="absolute inset-0 z-0 overflow-hidden">
                        <div class="w-full h-full bg-gradient-to-br from-purple-500 to-pink-500 flex items-center justify-center">
                            <span class="text-4xl text-white font-bold">{{ category.name|first|upper }}</span>
                        </div>
                        <div class="absolute inset-0 bg-black/60 group-hover:bg-black/70 transition-colors duration-500"></div>
                    </div>
                    <div class="relative z-10 h-full flex flex-col justify-end p-4">
                        <h3 class="text-lg font-bold text-white transform group-hover:translate-y-0 translate-y-2 transition-transform duration-300">{{ category.name }}</h3>
                        <span class="mt-2 inline-flex items-center text-xs font-medium text-gray-400 group-hover:text-purple-400 transition-colors transform group-hover:translate-y-0 translate-y-2 transition-transform duration-300 delay-150">
                            <svg class="ml-1 w-3 h-3 transition-transform group-hover:translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                            </svg>
                        </span>
                    </div>
                </a>
                {% endfor %}
            </div>
        </div>
    </section>

    <!-- Newsletter Section -->
    <section class="py-16 bg-gradient-to-br from-purple-900 via-black to-gray-900">
        <div class="max-w-7xl mx-auto px-6 lg:px-8">
            <div class="bg-gray-900 rounded-2xl p-8 sm:p-12 lg:flex lg:items-center lg:justify-between transform hover:scale-[1.02] transition-all duration-500">
                <div class="lg:w-1/2">
                    <h2 class="text-3xl font-bold text-transparent bg-clip-text bg-gradient-to-r from-purple-400 via-pink-500 to-red-500">Stay Updated</h2>
                    <p class="mt-3 text-lg text-gray-400">
                        Subscribe to our newsletter and never miss our latest articles and updates.
                    </p>
                </div>
                <div class="mt-8 lg:mt-0 lg:w-1/2">
                    <form class="sm:flex">
                        <label for="email" class="sr-only">Email address</label>
                        <input id="email" name="email" type="email" autocomplete="email" required 
                               class="w-full px-5 py-3 bg-gray-800 border border-gray-700 rounded-lg text-white placeholder-gray-500 focus:outline-none focus:border-purple-500 focus:ring-2 focus:ring-purple-500/20 transition-all duration-200" 
                               placeholder="Enter your email">
                        <div class="mt-3 sm:mt-0 sm:ml-3 sm:flex-shrink-0">
                            <button type="submit" 
                                    class="group relative w-full px-6 py-3 text-sm font-semibold text-white">
                                <div class="absolute inset-0 bg-gradient-to-r from-purple-500 to-pink-500 rounded-lg blur opacity-75 group-hover:opacity-100 transition duration-1000 group-hover:duration-200"></div>
                                <div class="relative flex items-center justify-center">
                                    <span class="mr-2">Subscribe</span>
                                    <svg class="w-5 h-5 transform group-hover:translate-x-1 transition-transform duration-200" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
                                    </svg>
                                </div>
                            </button>
                        </div>
                    </form>
                    <p class="mt-3 text-sm text-gray-400">
                        We care about your data. Read our
                        <a href="#" class="font-medium text-purple-400 hover:text-purple-300 transition-colors">
                            Privacy Policy
                        </a>.
                    </p>
                </div>
            </div>
        </div>
    </section>

    <!-- Testimonials Section -->
    <section class="py-16 bg-gradient-to-br from-black via-gray-900 to-purple-900">
        <div class="max-w-7xl mx-auto px-6 lg:px-8">
            <div class="text-center mb-12">
                <h2 class="text-3xl font-bold text-transparent bg-clip-text bg-gradient-to-r from-purple-400 via-pink-500 to-red-500 sm:text-4xl">
                    What Our Readers Say
                </h2>
                <p class="mt-3 max-w-2xl mx-auto text-xl text-gray-400">
                    Join thousands of satisfied readers
                </p>
            </div>
            
            <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
                <div class="bg-gray-900 p-8 rounded-2xl transform hover:scale-105 transition-all duration-500">
                    <div class="flex items-center mb-4">
                        <div class="flex">
                            {% for i in 1..5 %}
                                <svg class="w-5 h-5 text-yellow-500" fill="currentColor" viewBox="0 0 20 20">
                                    <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
                                </svg>
                            {% endfor %}
                        </div>
                    </div>
                    <blockquote class="text-gray-300 mb-6">
                        <p>"This blog has completely changed how I approach my morning routine. The articles are insightful and well-researched."</p>
                    </blockquote>
                    <div class="flex items-center">
                        <img class="h-10 w-10 rounded-full object-cover ring-2 ring-purple-500/50" src="https://randomuser.me/api/portraits/women/32.jpg" alt="Sarah Johnson">
                        <div class="ml-3">
                            <p class="text-sm font-medium text-white">Sarah Johnson</p>
                            <p class="text-xs text-gray-400">Marketing Director</p>
                        </div>
                    </div>
                </div>
                
                <div class="bg-gray-900 p-8 rounded-2xl transform hover:scale-105 transition-all duration-500">
                    <div class="flex items-center mb-4">
                        <div class="flex">
                            {% for i in 1..5 %}
                                <svg class="w-5 h-5 text-yellow-500" fill="currentColor" viewBox="0 0 20 20">
                                    <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
                                </svg>
                            {% endfor %}
                        </div>
                    </div>
                    <blockquote class="text-gray-300 mb-6">
                        <p>"I've found so many practical tips that I've implemented in my business. The quality of content is exceptional."</p>
                    </blockquote>
                    <div class="flex items-center">
                        <img class="h-10 w-10 rounded-full object-cover ring-2 ring-purple-500/50" src="https://randomuser.me/api/portraits/men/43.jpg" alt="Michael Chen">
                        <div class="ml-3">
                            <p class="text-sm font-medium text-white">Michael Chen</p>
                            <p class="text-xs text-gray-400">Startup Founder</p>
                        </div>
                    </div>
                </div>
                
                <div class="bg-gray-900 p-8 rounded-2xl transform hover:scale-105 transition-all duration-500">
                    <div class="flex items-center mb-4">
                        <div class="flex">
                            {% for i in 1..5 %}
                                <svg class="w-5 h-5 text-yellow-500" fill="currentColor" viewBox="0 0 20 20">
                                    <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
                                </svg>
                            {% endfor %}
                        </div>
                    </div>
                    <blockquote class="text-gray-300 mb-6">
                        <p>"The community here is amazing. I've learned so much from the discussions and articles."</p>
                    </blockquote>
                    <div class="flex items-center">
                        <img class="h-10 w-10 rounded-full object-cover ring-2 ring-purple-500/50" src="https://randomuser.me/api/portraits/women/68.jpg" alt="Emma Wilson">
                        <div class="ml-3">
                            <p class="text-sm font-medium text-white">Emma Wilson</p>
                            <p class="text-xs text-gray-400">Content Creator</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="https://cdnjs.cloudflare.com/ajax/libs/three.js/r121/three.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/vanta@latest/dist/vanta.waves.min.js"></script>
    <script>
        VANTA.WAVES({
            el: "#vanta-bg",
            mouseControls: true,
            touchControls: true,
            gyroControls: false,
            minHeight: 200.00,
            minWidth: 200.00,
            scale: 1.00,
            scaleMobile: 1.00,
            color: 0x1a1a1a,
            shininess: 50.00,
            waveHeight: 20.00,
            waveSpeed: 0.75,
            zoom: 0.75,
            backgroundColor: 0x000000
        })
    </script>
{% endblock %} 