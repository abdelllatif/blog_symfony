{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
<div class="min-h-screen w-full flex items-center justify-center bg-gradient-to-br from-indigo-900 via-purple-900 to-pink-800 py-12">
    <div class="w-full max-w-md mx-4">
        <!-- Register Modal -->
        <div class="bg-white/10 backdrop-blur-lg rounded-2xl shadow-2xl overflow-hidden transform transition-all duration-300 hover:scale-[1.02]">
            <div class="p-10">
                <!-- Header -->
                <div class="text-center mb-10">
                    <h2 class="text-4xl font-bold text-white mb-3">Create Account</h2>
                    <p class="text-indigo-200 text-lg">Join our community today</p>
                </div>

                <!-- Flash Messages -->
                {% for flash_error in app.flashes('verify_email_error') %}
                    <div class="mb-6 p-4 rounded-lg bg-red-500/20 border border-red-500/50 text-red-200">
                        {{ flash_error }}
                    </div>
                {% endfor %}

                {% for flash_success in app.flashes('success') %}
                    <div class="mb-6 p-4 rounded-lg bg-green-500/20 border border-green-500/50 text-green-200">
                        {{ flash_success }}
                    </div>
                {% endfor %}

                {{ form_start(registrationForm, {'attr': {'class': 'space-y-8'}}) }}
                    <div class="space-y-6">
                        <!-- Name Fields -->
                        <div class="grid grid-cols-2 gap-4">
                            <div class="relative">
                                {{ form_widget(registrationForm.firstName, {
                                    'attr': {
                                        'class': 'peer w-full px-4 py-4 bg-white/5 border border-white/10 rounded-lg text-white placeholder-transparent focus:outline-none focus:border-indigo-500 focus:ring-2 focus:ring-indigo-500/20 transition-all duration-200',
                                        'placeholder': 'First Name'
                                    }
                                }) }}
                                {{ form_label(registrationForm.firstName, 'First Name', {
                                    'label_attr': {
                                        'class': 'absolute left-4 -top-2.5 px-1 text-sm text-indigo-200 bg-transparent transition-all duration-200 peer-placeholder-shown:text-base peer-placeholder-shown:text-white/60 peer-placeholder-shown:top-3 peer-focus:-top-2.5 peer-focus:text-sm peer-focus:text-indigo-200'
                                    }
                                }) }}
                                {{ form_errors(registrationForm.firstName, {'attr': {'class': 'text-red-300 text-xs mt-1'}}) }}
                            </div>
                            <div class="relative">
                                {{ form_widget(registrationForm.lastName, {
                                    'attr': {
                                        'class': 'peer w-full px-4 py-4 bg-white/5 border border-white/10 rounded-lg text-white placeholder-transparent focus:outline-none focus:border-indigo-500 focus:ring-2 focus:ring-indigo-500/20 transition-all duration-200',
                                        'placeholder': 'Last Name'
                                    }
                                }) }}
                                {{ form_label(registrationForm.lastName, 'Last Name', {
                                    'label_attr': {
                                        'class': 'absolute left-4 -top-2.5 px-1 text-sm text-indigo-200 bg-transparent transition-all duration-200 peer-placeholder-shown:text-base peer-placeholder-shown:text-white/60 peer-placeholder-shown:top-3 peer-focus:-top-2.5 peer-focus:text-sm peer-focus:text-indigo-200'
                                    }
                                }) }}
                                {{ form_errors(registrationForm.lastName, {'attr': {'class': 'text-red-300 text-xs mt-1'}}) }}
                            </div>
                        </div>

                        <!-- Email Field -->
                        <div class="relative">
                            {{ form_widget(registrationForm.email, {
                                'attr': {
                                    'class': 'peer w-full px-4 py-4 bg-white/5 border border-white/10 rounded-lg text-white placeholder-transparent focus:outline-none focus:border-indigo-500 focus:ring-2 focus:ring-indigo-500/20 transition-all duration-200',
                                    'placeholder': 'Email'
                                }
                            }) }}
                            {{ form_label(registrationForm.email, 'Email', {
                                'label_attr': {
                                    'class': 'absolute left-4 -top-2.5 px-1 text-sm text-indigo-200 bg-transparent transition-all duration-200 peer-placeholder-shown:text-base peer-placeholder-shown:text-white/60 peer-placeholder-shown:top-3 peer-focus:-top-2.5 peer-focus:text-sm peer-focus:text-indigo-200'
                                }
                            }) }}
                            {{ form_errors(registrationForm.email, {'attr': {'class': 'text-red-300 text-xs mt-1'}}) }}
                        </div>

                        <!-- Password Fields -->
                        <div class="relative">
                            {{ form_widget(registrationForm.plainPassword, {
                                'attr': {
                                    'class': 'peer w-full px-4 py-4 bg-white/5 border border-white/10 rounded-lg text-white placeholder-transparent focus:outline-none focus:border-indigo-500 focus:ring-2 focus:ring-indigo-500/20 transition-all duration-200',
                                    'placeholder': 'Password'
                                }
                            }) }}
                            {{ form_label(registrationForm.plainPassword, 'Password', {
                                'label_attr': {
                                    'class': 'absolute left-4 -top-2.5 px-1 text-sm text-indigo-200 bg-transparent transition-all duration-200 peer-placeholder-shown:text-base peer-placeholder-shown:text-white/60 peer-placeholder-shown:top-3 peer-focus:-top-2.5 peer-focus:text-sm peer-focus:text-indigo-200'
                                }
                            }) }}
                            {{ form_errors(registrationForm.plainPassword, {'attr': {'class': 'text-red-300 text-xs mt-1'}}) }}
                        </div>

                        <div class="relative">
                            {{ form_widget(registrationForm.confirmPassword, {
                                'attr': {
                                    'class': 'peer w-full px-4 py-4 bg-white/5 border border-white/10 rounded-lg text-white placeholder-transparent focus:outline-none focus:border-indigo-500 focus:ring-2 focus:ring-indigo-500/20 transition-all duration-200',
                                    'placeholder': 'Confirm Password'
                                }
                            }) }}
                            {{ form_label(registrationForm.confirmPassword, 'Confirm Password', {
                                'label_attr': {
                                    'class': 'absolute left-4 -top-2.5 px-1 text-sm text-indigo-200 bg-transparent transition-all duration-200 peer-placeholder-shown:text-base peer-placeholder-shown:text-white/60 peer-placeholder-shown:top-3 peer-focus:-top-2.5 peer-focus:text-sm peer-focus:text-indigo-200'
                                }
                            }) }}
                            {{ form_errors(registrationForm.confirmPassword, {'attr': {'class': 'text-red-300 text-xs mt-1'}}) }}
                        </div>

                        <!-- Terms Checkbox -->
                        <div class="flex items-center">
                            {{ form_widget(registrationForm.agreeTerms, {
                                'attr': {
                                    'class': 'h-4 w-4 rounded border-white/20 bg-white/5 text-indigo-500 focus:ring-indigo-500/20'
                                }
                            }) }}
                            {{ form_label(registrationForm.agreeTerms, 'I agree to the terms and conditions', {
                                'label_attr': {
                                    'class': 'ml-2 block text-sm text-indigo-200'
                                }
                            }) }}
                        </div>
                        {{ form_errors(registrationForm.agreeTerms, {'attr': {'class': 'text-red-300 text-xs mt-1'}}) }}
                    </div>

                    <!-- Submit Button -->
                    <button type="submit" 
                            class="relative w-full py-4 px-4 bg-gradient-to-r from-indigo-500 to-purple-500 rounded-lg text-white font-medium overflow-hidden group">
                        <!-- Button Background -->
                        <div class="absolute inset-0 bg-gradient-to-r from-indigo-600 to-purple-600 opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
                        
                        <!-- Button Text -->
                        <span class="relative flex items-center justify-center">
                            <span class="mr-2 text-lg">Create Account</span>
                            <svg class="w-5 h-5 transform group-hover:translate-x-1 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
                            </svg>
                        </span>
                        
                        <!-- Neon Glow Effect -->
                        <div class="absolute inset-0 bg-gradient-to-r from-indigo-500/50 to-purple-500/50 blur-xl opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
                    </button>
                {{ form_end(registrationForm) }}

                <!-- Login Link -->
                <div class="mt-8 text-center">
                    <p class="text-indigo-200 text-lg">
                        Already have an account? 
                        <a href="{{ path('app_login') }}" class="text-white hover:text-indigo-200 font-medium transition-colors duration-200">
                            Sign in
                        </a>
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
