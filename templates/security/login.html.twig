{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
<div class="min-h-full w-full flex items-center justify-center bg-gradient-to-br from-indigo-900 via-purple-900 to-pink-800">
    <div class="w-full max-w-md mx-4">
        <!-- Login Modal -->
        <div class="bg-white/10 backdrop-blur-lg rounded-2xl shadow-2xl overflow-hidden">
            <div class="p-8">
                <!-- Header -->
                <div class="text-center mb-8">
                    <h2 class="text-3xl font-bold text-white mb-2">Welcome Back</h2>
                    <p class="text-indigo-200">Please sign in to continue</p>
                </div>

                <!-- Flash Messages -->
                {% if error %}
                    <div class="mb-4 p-4 rounded-lg bg-red-500/20 border border-red-500/50 text-red-200">
                        {{ error.messageKey|trans(error.messageData, 'security') }}
                    </div>
                {% endif %}

                <!-- Login Form -->
                <form method="post" class="space-y-6">
                    {% if csrf_token('authenticate') %}
                        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                    {% endif %}

                    <!-- Email Field -->
                    <div class="relative">
                        <input type="email" 
                               value="{{ last_username }}" 
                               name="_username" 
                               id="inputEmail" 
                               class="peer w-full px-4 py-3 bg-white/5 border border-white/10 rounded-lg text-white placeholder-transparent focus:outline-none focus:border-indigo-500 focus:ring-2 focus:ring-indigo-500/20 transition-all duration-200"
                               placeholder="Email"
                               required 
                               autofocus>
                        <label for="inputEmail" 
                               class="absolute left-4 -top-2.5 px-1 text-sm text-indigo-200 bg-transparent transition-all duration-200 peer-placeholder-shown:text-base peer-placeholder-shown:text-white/60 peer-placeholder-shown:top-3 peer-focus:-top-2.5 peer-focus:text-sm peer-focus:text-indigo-200">
                            Email
                        </label>
                    </div>

                    <!-- Password Field -->
                    <div class="relative">
                        <input type="password" 
                               name="_password" 
                               id="inputPassword" 
                               class="peer w-full px-4 py-3 bg-white/5 border border-white/10 rounded-lg text-white placeholder-transparent focus:outline-none focus:border-indigo-500 focus:ring-2 focus:ring-indigo-500/20 transition-all duration-200"
                               placeholder="Password"
                               required>
                        <label for="inputPassword" 
                               class="absolute left-4 -top-2.5 px-1 text-sm text-indigo-200 bg-transparent transition-all duration-200 peer-placeholder-shown:text-base peer-placeholder-shown:text-white/60 peer-placeholder-shown:top-3 peer-focus:-top-2.5 peer-focus:text-sm peer-focus:text-indigo-200">
                            Password
                        </label>
                    </div>

                    <!-- Remember Me -->
                    <div class="flex items-center justify-between">
                        <div class="flex items-center">
                            <input type="checkbox" 
                                   name="_remember_me" 
                                   id="remember_me" 
                                   class="h-4 w-4 rounded border-white/20 bg-white/5 text-indigo-500 focus:ring-indigo-500/20">
                            <label for="remember_me" class="ml-2 block text-sm text-indigo-200">
                                Remember me
                            </label>
                        </div>
                        <a href="#" class="text-sm text-indigo-200 hover:text-indigo-100 transition-colors duration-200">
                            Forgot password?
                        </a>
                    </div>

                    <!-- Submit Button -->
                    <button type="submit" 
                            class="relative w-full py-3 px-4 bg-gradient-to-r from-indigo-500 to-purple-500 rounded-lg text-white font-medium overflow-hidden group">
                        <!-- Button Background -->
                        <div class="absolute inset-0 bg-gradient-to-r from-indigo-600 to-purple-600 opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
                        
                        <!-- Button Text -->
                        <span class="relative flex items-center justify-center">
                            <span class="mr-2">Sign in</span>
                            <svg class="w-5 h-5 transform group-hover:translate-x-1 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
                            </svg>
                        </span>
                        
                        <!-- Neon Glow Effect -->
                        <div class="absolute inset-0 bg-gradient-to-r from-indigo-500/50 to-purple-500/50 blur-xl opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
                    </button>
                </form>

                <!-- Register Link -->
                <div class="mt-6 text-center">
                    <p class="text-indigo-200">
                        Don't have an account? 
                        <a href="{{ path('app_register') }}" class="text-white hover:text-indigo-200 font-medium transition-colors duration-200">
                            Sign up
                        </a>
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %} 